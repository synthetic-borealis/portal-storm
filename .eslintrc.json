{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb",
    "airbnb-typescript"
  ],
  "overrides": [
    {
      "files": [
        "__tests__/**"
      ],
      "plugins": [
        "jest"
      ],
      "extends": [
        "airbnb",
        "airbnb-typescript",
        "plugin:jest/recommended",
        "plugin:jest/style"
      ]
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.eslint.json"
  },
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "rules": {
  }
}
